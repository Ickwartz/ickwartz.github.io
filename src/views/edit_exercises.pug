doctype html
html(lang='de')
	head
		include partials/_head
		script(type="module" src="/js/edit_exercises.js")
	body
		// Main Menu Nav Bar and Contacts Bar
		include partials/_nav
		//admin
		if (true)
			center
				h2 Übungen bearbeiten
			.container.table-container
				.table-responsive
					table.table
						thead 
							tr 
								th.col-1 #
								th.col-2 Übung
								th.col-8 Beschreibung
								th.col-1 
						tbody#display-table
			
			#editModal.modal.fade(tabindex='-1' role='dialog' aria-hidden='true')
				.modal-dialog(role='document' style="width: 75%; max-width: 900px")
					.modal-content
						.modal-header
							h5.modal-title Übung bearbeiten
							button.close(type='button' data-bs-dismiss='modal' aria-label='Close')
								span(aria-hidden='true') ×
						.modal-body
							.table-responsive
								table.table
									thead 
										tr
											th.col-3 Übungsname 
											th.col-9 Beschreibung
									tbody#edit-table
									
						.modal-footer
							button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Abbrechen
		else 
			center
				h1 Kein Zugriff zu dieser Seite.

		// Bootstrap
		script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
