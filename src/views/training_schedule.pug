- var counter = 1
mixin table(items)
    each item in items
        tr.accordion-toggle.collapsed(id="accordion"+counter data-bs-toggle='collapse' data-bs-parent='#accordion'+counter href='#collapse'+counter)
            td.expand-button
            th(scope='row') #{counter}
            td= item.name
            td= item.reps 
            td= item.sets
            td= item.comment
        tr.hide-table-padding
            td
            td(colspan='10')
                div.collapse.in(id="collapse"+counter)
                    p= item.description
        - counter++


doctype html
html
    head
        include partials/_head
        link(rel='stylesheet' href='../css/table.css' type='text/css')
    body
        // Main Menu Navbar & Contacts Bar
        include partials/_nav

        if (loggedin)
            // table
            .container.table-container
                .table-responsive
                    table.table
                        thead
                            tr
                                th.col-1
                                th.col-1(scope='col') #
                                th.col-2(scope='col') Übung
                                th.col-2(scope='col') Wdh
                                th.col-2(scope='col') Sätze
                                th.col-4(scope='col') Anmerkung
                        tbody#exercises_table
                            +table(items)
        else
            include partials/_no-access

      
        // Bootstrap
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
        // JQuery
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')
