doctype html
html(lang='de')
    head
        include partials/_head
        script(type="module" src="/js/new_schedule.js")
        link(rel='stylesheet' href='../css/snackbar.css' type='text/css')
        style. 
            .modal-dialog {max-width: 550px !important;}
    body
        // Main Menu Navbar & Contacts Bar
        include partials/_nav
        if (admin)
            

            
            div.container.table-container
                h4 Trainingsplan für:  
                table 
                    thead 
                        th 
                        th 
                    tbody
                        tr 
                            td Vor- und Nachname:
                            td 
                                input#user-input(type="text", placeholder="User", list="availableUsersList")
                        tr 
                            td Name/ Kurzbeschreibung des Trainingsplans: 
                            td 
                                input#training-name-input(type="text", placeholder="Trainingsplan")
                        tr 
                            td Datum: 
                            td 
                                input#date-input(type="date", required pattern="\d{2}-\d{2}-\d{4}")
                        tr 
                            td 
                                p Training Wiederholen (Monate, 0 = einmalig): 
                            td 
                                select#repeat-duration(name="repeat-duration") 
                                    option(value=0) 0
                                    option(value=1) 1
                                    option(value=2) 2
                                    option(value=3) 3
                                    option(value=4) 4
                                    option(value=5) 5
                                    option(value=6) 6
                                div#repetition-weekdays
                                    label(for="monday") Mo:
                                    input#monday(type="checkbox", name="monday")
                                    label(for="tuesday") Di:
                                    input#tuesday(type="checkbox", name="tuesday")
                                    label(for="wednesday") Mi:
                                    input#wednesday(type="checkbox", name="wednesday")
                                    label(for="thursday") Do:
                                    input#thursday(type="checkbox", name="thursday")
                                    label(for="friday") Fr:
                                    input#friday(type="checkbox", name="friday")
                                    label(for="saturday") Sa:
                                    input#saturday(type="checkbox", name="saturday")
                                    label(for="sunday") So:
                                    input#sunday(type="checkbox", name="sunday")

                button.btn.btn-secondary.btn-sm.table-button(type="button", onclick="window.open('/newexercise')", name="new_exercise") 
                    | Neue Übung registrieren
                button#button-refresh-available-exercises.btn.btn-secondary.btn-sm.table-button(type="button", name="refresh_exercises") 
                    | Übungen aktualisieren
                button.btn.btn-secondary.btn-sm.table-button(type="button", name="load_schedule") 
                    | Trainingsplan laden

                .table-responsive
                    table#input_table.table
                        thead
                            th.col-3 Übung
                            th.col-1 Reps
                            th.col-1 Sets
                            th.col-6 Kommentar
                            th.col-1 Löschen
                        tbody#input_body

                button#addRowButton.btn.btn-primary.table-button(type="button") Neue Übung
                button#submitButton.btn.btn-primary.table-button(type="button") Speichern

            loading-modal
        else
            center
                h1 Kein Zugriff zu dieser Seite.
                    
        // Bootstrap
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
