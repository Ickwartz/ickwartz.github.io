doctype html
html(lang='de')
  head
    include partials/_head
    script(type="module" src="/js/new_exercises.js")
    link(rel='stylesheet' href='../css/snackbar.css' type='text/css')
  body
    // Main Menu Navbar & Contacts Bar
    include partials/_nav
    if (admin) 
      center 
        h2 Neue Übungen erstellen
      div.container.table-container
        .table-responsive
          table#input_table.table
            thead 
              tr 
                th.col-2 Übung
                th.col-9 Beschreibung
                th.col-1 Löschen
            tbody#input_body

        button#addRowButton.btn.btn-primary.table-button(type="button") Neue Übung
        button#submitButton.btn.btn-primary.table-button(type="button") Speichern

    else
      center
        h1 Kein Zugriff zu dieser Seite.
                 
