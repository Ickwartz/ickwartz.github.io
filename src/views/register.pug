doctype html
html(lang='de')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Erikas Page
    //
      Bootstrap
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
      >
    link(rel='stylesheet' type='text/css' href='./css/bootstrap.min.css')
    link(href='./css/style.css' type='text/css' rel='stylesheet')
  body
    // Main Menu Navbar & Contacts Bar
    include partials/_nav

    // login form
    form.input-form
      #inputs.offset-md-4.col-md-4.offset-sm-3.col-sm-6.col-10.offset-1.col-xl-2.offset-xl-5
        // Email input
        .mb-4
          input.form-control(name='first_name' placeholder='Vorname' type='text' required='')
        // Email input
        .mb-4
          input.form-control(name='surname' placeholder='Nachname' type='text' required='')
        // Email input
        .mb-4
          input.form-control(name='email' placeholder='Email Adresse' type='email' required='')
        // Password input
        .mb-4
          input.form-control(name='password' type='password' placeholder='Passwort' required='')
        // Password confirm input
        .mb-4
          input.form-control(name='password_confirm' type='password' placeholder='Passwort Wiederholen' required='')
      // Submit button
      .text-center
        button.btn.btn-primary.btn-block.mb-4(type='button') Registrieren
    // End login form
    // Bootstrap
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
